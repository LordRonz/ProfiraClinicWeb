{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DatabaseConnection": "Server=116.68.252.26;Database=PROFIRA;User ID=SMC;Password=4dminSMC;TrustServerCertificate=True"
  },
  "ApiSettings": {
    "BaseAddress": "http://116.68.252.26:2032/"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Hangfire": "Warning"
      }
    },
    "Properties": {
      "Application": "ProfiraClinicRME" // <-- Add your application name here
    },
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5340",
          "apiKey": ""
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "frontend.log",
                "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 15,
                "rollOnFileSizeLimit": true,
                "fileSizeLimitBytes": 10485760
              }
            }
          ]
        }
      }
    ]
  }
}
