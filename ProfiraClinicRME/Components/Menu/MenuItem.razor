<MudItem xs="4" sm="3" md="2">
    <a @onclick="DoAction" href="@Href" class="@(Disabled ? "menu-disabled" : "")">
        <MudGrid Class="flex-column justify-content-center align-center">
            <MudItem>
                <div class="menu-shadow rounded-circle " style="width: 110px; height: 110px; background-color: rgba(0, 0, 0, 0.25);">
                    <MudImage Src="@Src" Class="w-100" />
                </div>
            </MudItem>
            <MudItem Style="text-align:center">
                @Title
            </MudItem>

        </MudGrid>
    </a>
</MudItem>
@code {
    [Parameter]
    public string Src { get; set; } = "/images/menu/treatment.png";

    [Parameter]
    public string Href { get; set; } = "/produk";

    [Parameter]
    public string Title { get; set; } = "Produk";

    [Parameter]
    public EventCallback Click { get; set; }

    [Parameter]
    public bool Disabled { get; set; } = false;

    protected override void OnInitialized()
    {
        base.OnInitialized();

    }

    private async Task DoAction()
    {
        await Click.InvokeAsync();
    }


}
