@page "/kontrol"
@inherits BasePage

@using System.Net.Http.Json
@using ProfiraClinicRME.Utils;
@using ProfiraClinicRME.Components.Section

@inject HttpClient httpClient
@inject IAppointmentService SvcAppointment
@inject IAppointmentService SvcAppointment

<TopbarUser Route="KONTROL"
            Title="Perawatan Pasien / Kontrol"
            ShowBack="true"
            ShowSave="true"
            Appointment="CurrentAppointment" />

<MudCard Class="p-4 minh-100 rounded-3 pemeriksaan-input">
    <MudGrid Class="gap-y-2" Style="max-width: 85%;">
        <MudItem xs="4" Class="p-1">
            <MudTextField ShrinkLabel T="string" Label="No. Transaksi" Variant="Variant.Outlined" />
        </MudItem>
        <MudItem xs="2" Class="p-1">
            <MudDatePicker Label="Tanggal" Variant="Variant.Outlined" ShrinkLabel DateFormat="dd/MM/yyyy" />
        </MudItem>
        <MudItem xs="2" Class="p-1">
            <MudTimePicker Label="Jam" Variant="Variant.Outlined" ShrinkLabel Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.CheckCircleOutline" />
        </MudItem>
        <MudItem xs="12" Class="p-1">
            <MudTextField ShrinkLabel T="string" Label="Tujuan Kontrol" Variant="Variant.Outlined" Lines="10" />
        </MudItem>
        <MudItem xs="4" Class="p-1">
            <MudTextField ShrinkLabel T="string" Label="Nama Dokter" Variant="Variant.Outlined" />
        </MudItem>
        <MudItem xs="12" Class="p-1">
            <MudTextField ShrinkLabel T="string" Label="Keterangan" Variant="Variant.Outlined" Lines="10" />
        </MudItem>
    </MudGrid>
</MudCard>

@code {
    [CascadingParameter(Name = "CurrentAppointment")]
    public TRMAppointment CurrentAppointment { get; set; }

    private bool _hidePosition;
    private bool _loading;
    private string infoFormat = "Showing {first_item} to {last_item} of {all_items}";

    public TableConfig DoctorTableConfig { get; set; } = new TableConfig(new List<TableColumn>(), new List<object>());

    [CascadingParameter]
    public ProfiraClinicRME.Components.Layout.MainLayout Layout { get; set; }


    public Kontrol()
    {
        _classPath = "App::Page::Kontrol";
        LogTrace.Info("init", path: _classPath);
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();

    }

    protected override async Task OnInitializedAsync()
    {
        var patients = new List<object>()
        {
            (object) new { view="/pasien/1", tanggalKunjungan = "DR01", noKunjungan = "dr. Fifin" },
            (object) new { view="/pasien/2", tanggalKunjungan = "DR02", noKunjungan = "dr. Agnes" },
            (object) new { view="/pasien/3", tanggalKunjungan = "DR03", noKunjungan = "dr. Ruth" },
        };

        DoctorTableConfig = new TableConfig(new List<TableColumn> {
                new TableColumn { Caption="View", DataField="view", Type=ColumnType.View },
                new TableColumn { Caption="Tanggal Kunjungan", DataField="tanggalKunjungan" },
                new TableColumn { Caption="No. Kunjungan", DataField="noKunjungan" },
        }, patients);
    }


}

