@page "/package/{Id}/edit"

@using ProfiraClinic.Models.Core
@using ProfiraClinicWeb.Services
@using MudBlazor
@inject GroupPaketApiService ApiService
@inject NavigationManager NavigationManager

<MudCard Class="p-3 h-100">
    <MudForm @ref="form" Class="table-form">
        <MudGrid GutterSize="0">
            <!-- Row 1: Nama Paket (max half width) -->
            <MudItem xs="12" sm="6">
                <MudTextField T="string"
                              Label="Nama Paket"
                              @bind-Value="groupPaket.NamaGroupPaket"
                              Variant="Variant.Outlined"
                              Margin="Margin.Dense"
                              Class="mb-0" />
            </MudItem>

            <!-- Row break -->
            <MudItem xs="12" Class="p-0" />

            <!-- Row 2: Kode Group (max half width, read-only) -->
            <MudItem xs="12" sm="6">
                <MudTextField T="string"
                              Label="Kode Group"
                              @bind-Value="groupPaket.KodeGroupPaket"
                              Variant="Variant.Outlined"
                              Margin="Margin.Dense"
                              Disabled="true"
                              Class="mb-0" />
            </MudItem>
        </MudGrid>

        <MudStack Direction="Row" Justify="Justify.FlexEnd" Spacing="1" Class="mt-3">
            <MudButton Variant="Variant.Outlined" Color="MudBlazor.Color.Secondary" OnClick="GoBack">
                Kembali
            </MudButton>
            <MudButton Variant="Variant.Filled"
                       Color="MudBlazor.Color.Primary"
                       Type="Submit"
                       Disabled="!form?.IsValid ?? false"
                       OnClick="SubmitAsync">
                Simpan
            </MudButton>
        </MudStack>
    </MudForm>
</MudCard>

@code {
    [Parameter] public string Id { get; set; } = string.Empty;

    private GroupPaket groupPaket = new();
    private MudForm? form;

    [CascadingParameter]
    public ProfiraClinicWeb.Components.Layout.MainLayout Layout { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Layout.ChangeTitleAndRoute("Group Paket", "Edit Group Paket");

        if (string.IsNullOrWhiteSpace(Id))
        {
            NavigationManager.NavigateTo("/package");
            return;
        }

        // Load existing data
        var resp = await ApiService.GetGroupPaketByCodeAsync(Id);
        if (resp.StatusCode == 0 && resp.Data is not null)
        {
            groupPaket = resp.Data;
            System.Diagnostics.Debug.WriteLine(resp.Data.NamaGroupPaket);
            StateHasChanged();
        }
        else
        {
            // If not found or error, go back to list
            NavigationManager.NavigateTo("/package");
        }
    }

    private void GoBack() => NavigationManager.NavigateTo("/package");

    private async Task SubmitAsync()
    {
        // Make sure key stays consistent
        var kode = Id;

        // Optionally set system fields
        groupPaket.USRID = groupPaket.USRID ?? string.Empty;
        groupPaket.Aktif = string.IsNullOrEmpty(groupPaket.Aktif) ? "1" : groupPaket.Aktif;

        var result = await ApiService.UpdateGroupPaketAsync(kode, groupPaket);
        if (result.StatusCode < 300)
        {
            NavigationManager.NavigateTo("/package");
        }
        else
        {
            System.Diagnostics.Debug.WriteLine(result.Message);
        }
    }
}

